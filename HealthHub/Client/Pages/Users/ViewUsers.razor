@page "/user/add"
<MudCard Class="p-3">

    <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudTextField Label="First name" @bind-Value="model.FirstName" For="@(() => model.FirstName)" />
                <MudTextField Label="Second name" HelperText="(optional)" @bind-Value="model.SecondName" For="@(() => model.SecondName)" />
                <MudTextField Label="Last name" @bind-Value="model.LastName" For="@(() => model.LastName)" />
                <MudTextField Label="ID Number" @bind-Value="model.IdNumber" For="@(() => model.IdNumber)" />
                <MudTextField Label="Phone Number" HelperText="(optional)" @bind-Value="model.PhoneNumber" For="@(() => model.PhoneNumber)" />
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudTextField Label="Email" @bind-Value="model.Email" For="@(() => model.Email)" />
                <MudTextField Label="Password" HelperText="Choose a strong password" @bind-Value="model.Password" For="@(() => model.Password)" InputType="InputType.Password" />
                <MudTextField Label="Password" HelperText="Repeat the password" @bind-Value="model.Password2" For="@(() => model.Password2)" InputType="InputType.Password" />

            </MudItem>
            <MudItem xs="12" Class="d-flex justify-content-end">
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Register</MudButton>
            </MudItem>
        </MudGrid>
    </EditForm>
</MudCard>

